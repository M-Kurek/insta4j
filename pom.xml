<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		 xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>org.idm.jinstapaper</groupId>
	<artifactId>jinstapaper</artifactId>
	<version>1.0.0-SNAPSHOT</version>
	<packaging>pom</packaging>
	<name>jinstapaper</name>
	<description>A Java library for the Instapaper API</description>
	<url>http://jinstapaper.org/</url>
	<licenses>
		<license>
			<name>Apache License 2.0</name>
			<url>http://www.apache.org/licenses/LICENSE-2.0</url>
			<distribution>repo</distribution>
		</license>
	</licenses>
	<scm>
		<url>https://github.com/jinstapaper/jinstapaper</url>
		<connection>scm:git@github.com/jinstapaper/jinstapaper.git</connection>
		<developerConnection>scm:git@github.com/jinstapaper/jinstapaper.git</developerConnection>
	</scm>
	<developers>
		<developer>
			<id>dzontak</id>
			<name>Denis Zontak</name>
			<email>dzontak@gmail.com</email>
			<url>http://toilettwit.info</url>
			<roles>
				<role>lead</role>
				<role>architect</role>
				<role>developer</role>
			</roles>
			<timezone>-1</timezone>
		</developer>
	</developers>
	<issueManagement>
		<system>Jira</system>
		<url>http://jinstapaper.org/jira/browse/JIP</url>
	</issueManagement>
	<mailingLists>
		<mailingList>
			<name>jinstapaper</name>
			<subscribe>jinstapaper-subscribe@googlegroups.com</subscribe>
			<unsubscribe>jinstapaper-unsubscribe@googlegroups.com</unsubscribe>
			<post>jinstapaper@googlegroups.com</post>
			<archive>http://groups.google.com/group/jinstapaper</archive>
		</mailingList>
	</mailingLists>
	<distributionManagement>

		<repository>
			<id>sonatype-nexus-staging</id>
			<name>Nexus Release Repository</name>
			<uniqueVersion>false</uniqueVersion>
			<url>http://oss.sonatype.org/service/local/staging/deploy/maven2/</url>
		</repository>

		<snapshotRepository>
			<id>org.idm.jinstapaper</id>
			<name>jinstapaper.org Repository</name>
			<uniqueVersion>false</uniqueVersion>
			<url>file:${user.home}/maven2/</url>
		</snapshotRepository>
	</distributionManagement>
	<profiles>
		<profile>
			<id>release-sign-artifacts</id>
			<activation>
				<property>
					<name>performRelease</name>
					<value>true</value>
				</property>
			</activation>
			<build>
				<plugins>
					<plugin>
						<groupId>org.apache.maven.plugins</groupId>
						<artifactId>maven-gpg-plugin</artifactId>
						<version>1.3</version>
						<executions>
							<execution>
								<id>sign-artifacts</id>
								<phase>verify</phase>
								<goals>
									<goal>sign</goal>
								</goals>
							</execution>
						</executions>
					</plugin>
				</plugins>
			</build>
		</profile>
	</profiles>
	<modules>
		<module>jinstapaper-core</module>
	</modules>
</project>
